<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/splashEndColor</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/textColorTitle</item>
        <!-- Used for the title -->
        <item name="android:windowTitleStyle">@style/AppDialogTitleTextStyle</item>
        <!-- Used for the message -->
        <item name="android:textColorPrimary">@color/textColorDark</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <!--Dialogs-->
    <style name="AppDialogTitleTextStyle">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AlertDialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:windowTitleStyle">@style/AlertDialog.Theme</item>
        <item name="buttonBarButtonStyle">@style/GenericButton</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="GenericButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:theme">@style/AppThemeButton</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!--Button-->
    <style name="AppThemeButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/button</item>
        <item name="background">@drawable/custom_rounded_corners</item>

    </style>

</resources>